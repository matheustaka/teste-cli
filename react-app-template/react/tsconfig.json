{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
      "graphql"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017"
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "components/FormRD/",
    "FormRD.jsx"
  ]
}