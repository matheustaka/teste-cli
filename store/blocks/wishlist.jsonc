{
  "my-account-link.wishlist-link": {
    "props": {
      "label": "Lista de desejos"
    }
  },
  "my-account-page.wishlist-page": {
    "children": [
      "flex-layout.row#topo",
      "list-context.wishlist"
    ]
  },
  "store.wishlist": {
    "blocks": [
      "flex-layout.row#topo",
      "list-context.wishlist"
    ]
  },
  "flex-layout.row#topo": {
    "children": [
      "flex-layout.col#title"
    ]
  },
  "flex-layout.col#title": {
    "children": [
      "rich-text#title"
    ],
    "props": {
      "blockClass": "titleWishlist",
      "preventVerticalStretch": true
    }
  },
  "rich-text#title": {
    "props": {
      "text": "### Lista de Desejos"
    }
  },
  "list-context.wishlist": {
    "props": {
      "showViewEmptyList": true
    },
    "blocks": [
      "wishlist-empty-list",
      "product-summary.shelf#wishlist"
    ],
    "children": [
      "list-context.product-list#wishlist"
    ]
  },
  "product-summary.shelf#wishlist": {
    "children": [
      "add-to-list-btn",
      "product-summary-image",
      "product-summary-name",
      "product-summary-space",
      "product-summary-price",
      "add-to-cart-button"
    ]
  },
  "slider-layout#wishlist": {
    "props": {
      "itemsPerPage": {
        "desktop": 5,
        "tablet": 3,
        "phone": 1
      },
      "showNavigationArrows": "desktopOnly",
      "showPaginationDots": "always",
      "infinite": false,
      "fullWidth": true,
      "blockClass": "shelf"
    }
  },
  "list-context.product-list#wishlist": {
    "blocks": [
      "product-summary.shelf#wishlist"
    ],
    "children": [
      "list-context-renderer#wrapped"
    ],
    "props": {
      "orderBy": "OrderByTopSaleDESC"
    }
  },
  "list-context-renderer#wrapped": {
    "props": {
      "listElement": "ul",
      "itemElement": "li"
    }
  },
  // EMPTY VIEW OF WISHLSIT
  "wishlist-empty-list": {
    "children": [
      "rich-text#empty-list-description"
    ]
  },
  "rich-text#empty-list-description": {
    "props": {
      "text": "### Você ainda não tem produtos adicionados em sua lista",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "font": "t-heading-2"
    }
  }
}
